@using PL.Web.API
@{ 
    var userAPI = new UsersAPI();
    var awardAPI = new AwardsAPI();

    var type = Request["Type"];

    Guid id;
    Guid.TryParse(Request["Id"], out id);

    if (type == "user")
    { 
        userAPI.DeleteUserById(id); 
    }
    else
    { 
        awardAPI.DeleteAwardById(id); 
    }
}
