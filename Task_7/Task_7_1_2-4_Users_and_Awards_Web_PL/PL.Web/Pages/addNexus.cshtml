@using PL.Web.API
@{ 
    var usersPL = new UsersAPI();

    Guid userId, awardId;

    Guid.TryParse(Request["UserId"], out userId);
    Guid.TryParse(Request["AwardId"], out awardId);

    if (userId == Guid.Empty && awardId == Guid.Empty)
    {
        Response.Write("Error on adding nexus");
        return;
    }

    usersPL.AddAwardToUser(userId, awardId);
}
