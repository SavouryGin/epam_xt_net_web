@using PL.Web.API
@using Common.Entities
@{ 
    var usersPL = new UsersAPI();
    var awardsPL = new AwardsAPI();

    var type = Request["Type"];

    dynamic objects;

    Guid id;
    Guid.TryParse(Request["Id"], out id);

    if (id == Guid.Empty)
    {
        return;
    }

    if (type == "user")
    {
        objects = usersPL.GetUserAwards(id);
    }
    else
    {
        objects = awardsPL.GetAwardedUsers(id);
    }

    string name;
    string avatar;
}

@foreach (var item in objects)
{
    if (type == "user")
    {
        avatar = "/Icons/favorite.png";
        name = (item as Award).Title;
    }
    else
    {
        avatar = "/Icons/user.png";
        name = (item as User).Name;
    }

    if (item.Avatar != null)
    {
        avatar = item.Avatar;
    }

<text>
    <div class="modal_list_item" id="@item.Id">
        <div class="modal_list_image" title="@name"><img class="modal_list_avatar" src="@avatar" /></div>
        <div class="modal_list_delete">&times;</div>
    </div>
</text>}
